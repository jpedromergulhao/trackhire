generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ApplicationStatus {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  HIRED
}

enum TechnicalStage {
  NONE
  TECHNICAL_INTERVIEW
  TECHNICAL_TEST
  LIVE_CODING
  SYSTEM_DESIGN
}

enum JobCategory {
  TECH
  NON_TECH
}

enum Seniority {
  NONE
  JUNIOR
  MID
  SENIOR
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String
  name            String
  desiredJob      String?
  desiredSalary   Int?
  profilePicture  String? 
  createdAt       DateTime @default(now())

  applications    Application[]
}

model Application {
  id               String            @id @default(uuid())
  userId           String
  companyName      String
  role             String
  jobDescription   String?           @db.Text
  jobCategory      JobCategory
  seniority        Seniority
  salary           Int?
  status           ApplicationStatus @default(APPLIED)
  technicalStage   TechnicalStage    @default(NONE)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}